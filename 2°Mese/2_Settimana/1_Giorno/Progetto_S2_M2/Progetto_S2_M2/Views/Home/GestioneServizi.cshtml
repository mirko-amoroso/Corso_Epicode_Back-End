@model Soluzione_S2_M2.Model.PrenotazioniServizi

<form asp-action="SalvaServiziPrenotazione" method="post" >
    <input type="hidden" name="IdPreno" value="@ViewBag.IdPrenotazione" />
    <div class="form-group">
        <label asp-for="IdServizio">Servizio da scegliere:</label>
        <select asp-for="IdServizio" class="form-control">
            <option value="" disabled selected>Seleziona un'opzione...</option>
            @foreach (var serv in ViewBag.AllServizi)
            {
                <option value="@serv.IdServizio">
                    @serv.Descrizione
                </option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DataInizio" class="control-label"></label>
        <input asp-for="DataInizio" class="form-control" id="start-date" />
        <span asp-validation-for="DataInizio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataFine" class="control-label"></label>
        <input asp-for="DataFine" class="form-control" id="start-date" />
        <span asp-validation-for="DataFine" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantita" class="control-label"></label>
        <input asp-for="Quantita" class="form-control" id="start-date" />
        <span asp-validation-for="Quantita" class="text-danger"></span>
    </div>
    <button class="btn btn-outline-dark">Salva servizi</button>
</form>
