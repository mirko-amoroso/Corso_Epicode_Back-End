@model Soluzione_S2_M2.Model.Prenotazioni

<script>
    function setMinDate() {
        const today = new Date();
        const year = today.getFullYear();
        const month = String(today.getMonth() + 1).padStart(2, '0'); // Months are 0-based
        const day = String(today.getDate()).padStart(2, '0');
        const minDate = `${year}-${month}-${day}`;

        document.getElementById('start-date').setAttribute('min', minDate);
    }

    // Set the minimum date when the page loads
    window.onload = setMinDate;
</script>

<form asp-action="BottoneSalvaCliente" method="post">
    <div class="form-group">
        <label asp-for="DataInizio" class="control-label"></label>
        <input asp-for="DataInizio" class="form-control" type="date" id="start-date" />
        <span asp-validation-for="DataInizio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataFine" class="control-label"></label>
        <input asp-for="DataFine" class="form-control" type="date" />
        <span asp-validation-for="DataFine" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Caparra" class="control-label"></label>
        <input asp-for="Caparra" class="form-control" type="number" />
        <span asp-validation-for="Caparra" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Importo" class="control-label"></label>
        <input asp-for="Importo" class="form-control" type="number" />
        <span asp-validation-for="Importo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="pensioneSelect">Tipo di Pensione</label>
        <select id="pensioneSelect" name="TipoPensione" class="form-control">
            <option value="" disabled selected>Seleziona un'opzione...</option>
            <option value="MezzaPensione">Mezza Pensione</option>
            <option value="PensioneCompleta">Pensione Completa</option>
            <option value="PernottamentoPrimaColazione">Pernottamento e Prima Colazione</option>
        </select>
    </div>
    <button class="btn btn-outline-dark">Salva</button>
</form>
