
@model Prog_S1_V.Model.Verbale

<h2>Inserisci il verbale all'utente numero: @ViewBag.IdTizio</h2>

<form asp-action="BottoneFormVerbale" method="post">
    <div class="form-group">
        <label asp-for="DataViolazione" class="control-label"></label>
        <input asp-for="DataViolazione" class="form-control" />
        <span asp-validation-for="DataViolazione" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IndirizzoViolazione" class="control-label"></label>
        <textarea asp-for="IndirizzoViolazione" class="form-control"></textarea>
        <span asp-validation-for="IndirizzoViolazione" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NominativoAgente" class="control-label"></label>
        <textarea asp-for="NominativoAgente" class="form-control"></textarea>
        <span asp-validation-for="NominativoAgente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataTrascrizioneVerbale" class="control-label"></label>
        <input asp-for="DataTrascrizioneVerbale" class="form-control" />
        <span asp-validation-for="DataTrascrizioneVerbale" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Importo" class="control-label"></label>
        <textarea asp-for="Importo" class="form-control"></textarea>
        <span asp-validation-for="Importo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DecurtamentoPunti" class="control-label"></label>
        <textarea asp-for="DecurtamentoPunti" class="form-control"></textarea>
        <span asp-validation-for="DecurtamentoPunti" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdViolazione" class="control-label"></label>
        <select typeof="select" asp-for="IdViolazione" class="form-control">
            @foreach (var violazione in ViewBag.Violazioni)
            {
                <option value="@violazione.IdViolazione">
                    @violazione.Descrizione
                </option>
            }
        </select>
    </div>
    <input type="hidden" name="IdAnagrafica" value="@ViewBag.IdTizio" />

    <button type="submit" class="btn btn-outline-dark my-4">Aggiungi</button>
</form>
