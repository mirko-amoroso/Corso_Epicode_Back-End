@model List<Project_M2_S3.Models.Tutto>


@{
    int c = 0;
    for (int i = 0; i < Model.Count; i++)
    {
        if(Model[i].ordine.Done)
        {
            c++;
        }
    }
}

    <h2>Tutti gli ordini</h2>

    @foreach(var ordini in Model) {
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Numero ordine: @ordini.ordine.Id</h5>
            <ul>
                @foreach (var prod in ordini.productss)
                {
                    <li class="card-text">Prodotto: @prod.Name Quantità: @prod.Quant</li>        
                }
            </ul>
            @if (ordini.ordine.Done)
            {
                <p>Emesso</p>
            }
            else
            {
                <p>Non anora emesso</p>
                <form asp-action="CambiaDone">
                    <input type="hidden" name="IdOrder" value="@ordini.ordine.Id" />
                <button class="btn btn-outline-success">seleziona come emmesso</button>
                </form>
            }
        </div>
    </div>
<p>ordini totali evasi: @c</p>
}
